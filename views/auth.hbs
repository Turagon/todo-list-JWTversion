{{!-- <form action="/auth/" method="post" class="login"> --}}
<form action="/auth/jwt" method="post" class="login">
  {{#each errors}}
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Note!</strong> {{this.msg}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/each}}
  {{#if msg}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Hi!</strong> {{msg}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}
  {{#if error}}
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Note!</strong> {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  {{/if}}
  <div class="form-group">
    <label for="email-login" class="select-label col-form-label col-3"><i class="far fa-envelope"></i>Email</label>
    <div class="input-column p-0">
      <input type="email" id="email-login" class="form-control" name="email" aria-describedby="help" maxlength="60"
        placeholder="please input email same as your account" {{#if email}} value="{{email}}" {{/if}} required>
      <small id="help" class="form-text text-muted invalid">email is required or invalid format</small>
    </div>
  </div>
  <div class="form-group mt-3">
    <label for="password-input" class="select-label col-form-label"><i class="fas fa-key"></i>Password</label>
    <div class="input-column p-0">
      <input type="text" id="password-input" class="form-control" name="password" aria-describedby="help" minlength="6"
        maxlength="12" placeholder="please input password 6~12 characters" required>
      <small id="help" class="form-text text-muted invalid">invalid password length</small>
    </div>
  </div>
  <div class="login-button-box mt-3">
    <button type="submit" class="login-button">Login</button>
    {{!-- <a href="/auth/jwt" class="facebook"><i class="fab fa-facebook-square"></i>JWT login</a> --}}
    <a href="/auth/register" class="homepage">Don't have account? -> Register</a>
  </div>
</form>
<div class="login-img"></div>