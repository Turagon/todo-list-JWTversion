<div class="todo-pending">
  <h5 class="todo-lists">待辦事項</h5>
  {{#each todos}}
  <div class="todo-item-box">
    <div class="todo-name">
      <span class="todo-content">{{this.name}}</span>
    </div>
    <div class="todo-btn">
      <span class="todo-deadline">{{dateConvert this.dueDate}}</span>
      <a href="/edit/{{this.id}}" class="todo-edit-btn">Edit</a>
      <a href="/done/{{this.id}}" class="todo-done-btn">Done</a>
      <button href="iamnotgoinganywhere" class="todo-delete-btn" id="delete-btn" data-id="{{this.id}}">Delete</button>
    </div>
  </div>
  {{/each}}
</div>
<div class="todo-done">
  <h5 class="todo-lists">已完成事項</h5>
  {{#each done}}
  <div class="todo-done-box">
    <div class="todo-name done">
      <span class="todo-content done">{{this.name}}</span>
    </div>
    <div class="todo-btn done">
      <a href="/revert/{{this.id}}" class="todo-done-btn">Revert</a>
      <form action="/{{this.id}}?_method=DELETE" method="POST" id="delete-submit" class="delete-submit">
        <button type="submit" class="delete-confirm-btn">刪除</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>